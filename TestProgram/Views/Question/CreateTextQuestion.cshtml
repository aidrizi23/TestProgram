@model TestProgram.Models.Question.TextQuestionForCreationDto

@{
    ViewData["Title"] = "Create Text Question";
}

<h2>Create Text Question</h2>

<form asp-action="CreateTextQuestion" method="post">
    <input type="hidden" asp-for="TestId" />

    <div class="form-group">
        <label asp-for="QuestionText" class="control-label">Question Text</label>
        <textarea asp-for="QuestionText" class="form-control"></textarea>
        <span asp-validation-for="QuestionText" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Points" class="control-label">Points</label>
        <input asp-for="Points" class="form-control" type="number" />
        <span asp-validation-for="Points" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ExpectedAnswer" class="control-label">Expected Answers</label>
        <textarea asp-for="ExpectedAnswer" class="form-control" placeholder="Enter each answer on a new line..."></textarea>
        <span asp-validation-for="ExpectedAnswer" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Details" asp-controller="Test" asp-route-id="@Model.TestId" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}